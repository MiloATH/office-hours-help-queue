<div class="eight wide centered column">
    <h1>All Courses</h1>
    <div class="ui massive fluid vertical menu">
        <% @courses.each do |course| %>
            <a href="<%= url_for course %>" class="item">
                <strong><%= course.name %>:</strong> <%= course.long_name %>
                <% if current_user.instructor_for_course?(course) %>
                    <div class="ui teal label">Instructor</div>
                <% end %>
            </a>
        <% end %>
    </div>

    <div class="ui message">
        <p><strong>New course?</strong> Email <a href="mailto:newcourse@eecs.help">newcourse@eecs.help</a>.</p>
    </div>

    <% if current_user.global_admin? %>
        <a class="ui large fluid primary button" href="<%= url_for admin_courses_path %>">
            Admin Panel
        </a>
    <% end %>
</div>
