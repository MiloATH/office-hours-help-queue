<a class="item" href="<%= url_for queue %>">
    <div class="right floated content">
        <div style="line-height: 32px;">
        <% if queue.online_instructors.empty? %>
            <span class="ui red label">Closed</span>
        <% end %>
        <% queue.online_instructors.each do |instructor| %>
            <span data-tooltip="<%= instructor.name %>" data-position="top center" data-inverted="">
                <img class="ui avatar image" src="<%= instructor.avatar_url %>">
            </span>
        <% end %>
        </div>
    </div>
    <div class="content">
        <div class="header"><%= queue.name %></div>
        <%= queue.location %>
    </div>
</a>
