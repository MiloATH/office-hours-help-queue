<div class="six wide centered column">
    <% @courses.each do |course| %>
        <div class="ui fluid card" href="#">
            <div class="content">
                <div class="header"><%= course.name %></div>
                <div class="meta"><%= course.long_name %></div>
            </div>
            <div class="content">
                <h4 class="ui sub header">Open Queues</h4>
                <div class="ui middle aligned selection list">
                    <% course.open_queues.each do |queue| %>
                        <a class="item" href="<%= url_for queue %>">
                            <div class="right floated content">
                                <% queue.active_instructors.each do |instructor| %>
                                <span data-tooltip="<%= instructor.name %>" data-position="top center" data-inverted="">
                                    <img class="ui avatar image" src="<%= gravatar_url_for instructor %>">
                                </span>
                                <% end %>
                            </div>
                            <div class="content">
                                <div class="header"><%= queue.name %></div>
                                <%= queue.location %>
                            </div>
                        </a>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
