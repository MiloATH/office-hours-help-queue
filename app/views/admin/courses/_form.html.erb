<%= form_for [:admin, @course], html: {class: 'ui form'} do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :long_name %>
        <%= f.text_field :long_name %>
    </div>

    <div class="field">
        <%= f.label :slug %>
        <%= f.text_field :slug %>
    </div>

    <div class="field">
        <div class="ui toggle checkbox">
            <%= f.check_box :sort_by %>
            <label>Sort by number of previously resolved requests over all time
            </label>
        </div>
    </div>

    <%= f.submit 'Submit', class: 'ui button' %>
<% end %>
