<%= render 'shared/breadcrumbs', trail: [
    { title: @course_instructor.course.name, href: url_for(@course_instructor.course)},
    { title: 'Admin', href: admin_course_url(@course_instructor.course) },
    'Add Instructor'
] %>

<div class="six wide column">
    <h1 class="ui header">
        Add Instructor for <%= @course_instructor.course.name %>
    </h1>

    <%= form_for [:admin, @course_instructor], html: {class: 'ui form'} do |f| %>
        <div class="field">
            <label>Email</label>
            <input type="email" name="instructor_email" placeholder="instructor@umich.edu">
        </div>

        <%= f.hidden_field :course_id %>
        <%= f.submit 'Add', class: 'ui button' %>
    <% end %>

</div>
